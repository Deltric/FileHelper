<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" fx:controller="dev.deltric.filehelper.controller.FrontViewController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="No Directory selected" fx:id="selectedDirectory"/>
    <Button text="Choose Directory!" onAction="#onChooseDirectory"/>
    <Button text="Open Toolbox" disable="true" fx:id="openToolbox" onAction="#onOpenToolbox"/>
</VBox>